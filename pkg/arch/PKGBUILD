pkgname=ttychat
pkgver=0.1.0
pkgrel=1
pkgdesc="A simple and elegant TUI chat client"
arch=('x86_64')
url="https://github.com/madss-bin/ttychat"
license=('GPL3')
depends=('gcc-libs')
makedepends=('rust' 'cargo')
source=("ttychat-$pkgver.tar.gz::https://github.com/madss-bin/ttychat/archive/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --locked
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm755 "target/release/ttychat" "$pkgdir/usr/bin/ttychat"
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
